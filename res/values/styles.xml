<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize">66dp</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabText</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyTabBar</item>
        <item name="android:actionButtonStyle">@style/MyActionButton</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/nav_back</item>
    </style>

    <style name="MyActionBarTab" parent="@android:style/Widget.ActionBar.TabView">
        <item name="android:background">@drawable/nav_tab</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:width">120dp</item>
    </style>

    <style name="MyTabBar" parent="@android:style/Widget.ActionBar.TabBar">
        <item name="android:divider">@drawable/nav_tab_divider</item>
        <item name="android:showDividers">end|beginning|middle</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="MyTabText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyActionButton" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>        <item name="android:typeface">monospace</item>
        <item name="android:divider">@drawable/nav_button_divier</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:padding">0dp</item>
        <item name="android:width">70dp</item>
    </style>

    <style name="ImageDialogStyle" parent="@android:style/Theme.Holo.Dialog">

        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:windowIsFloating">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- <item name="android:background">@android:color/background_light</item> -->
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:backgroundDimEnabled">true</item> -->
    </style>

    <!-- 侧边搜索栏相关样式 -->
    <style name="sidebar">
        <item name="android:layout_width">262dp</item>
        <item name="android:background">@drawable/sidebar_back</item>
    </style>
    <style name="textTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#f0f0f1</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>
    <style name="editText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/sidebar_input1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="editTextSmall" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/sidebar_input3</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="searchButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/sidebar_button</item>
        <item name="android:layout_marginTop">39dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="spinLarge" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/sidebar_spin_l</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
    <style name="spinSmall" parent="@style/spinLarge">
        <item name="android:background">@drawable/sidebar_spin_s</item>
        <item name="android:layout_width">150dp</item>
    </style>
    
    <!-- 现场执法详情页 -->
    <style name="enfoceTextHeader">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#4b5055</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="enforceTextItem">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <!-- 文书页 -->
    <style name="paperButton">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
</resources>