<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize">66dp</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabText</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyTabBar</item>
        <item name="android:actionButtonStyle">@style/MyActionButton</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/nav_back</item>
    </style>

    <style name="MyActionBarTab" parent="@android:style/Widget.ActionBar.TabView">
        <item name="android:background">@drawable/nav_tab</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:width">120dp</item>
    </style>

    <style name="MyTabBar" parent="@android:style/Widget.ActionBar.TabBar">
        <item name="android:divider">@drawable/nav_tab_divider</item>
        <item name="android:showDividers">end|beginning|middle</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="MyTabText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyActionButton" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>        <item name="android:typeface">monospace</item>
        <item name="android:divider">@drawable/nav_button_divier</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:padding">0dp</item>
        <item name="android:width">70dp</item>
    </style>

    

    <!-- 侧边搜索栏相关样式 -->
    <style name="sidebar">
        <item name="android:layout_width">262dp</item>
        <item name="android:background">@drawable/sidebar_back</item>
    </style>
    <style name="sideTextTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#f0f0f1</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>
    <style name="sideEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/sidebar_input1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="sideEditTextSmall" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/sidebar_input3</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="sideSearchButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/sidebar_button</item>
        <item name="android:layout_marginTop">39dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="sideSpinLarge" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/sidebar_spin_l</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
    <style name="sideSpinSmall" parent="@style/sideSpinLarge">
        <item name="android:background">@drawable/sidebar_spin_s</item>
        <item name="android:layout_width">150dp</item>
    </style>
    
    <!-- 现场执法详情页 -->
    <style name="enfoceTextHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4b5055</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="enforceTextItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="enforceCheckBox" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:button">@drawable/enforce_checkbox</item>
    </style>
    <!-- 文书页 -->
    <style name="paperButton">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="paperDivider">
        <item name="android:background">@drawable/line_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="paperTextValue" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/paper_text_value_shape</item>
    </style>
    <style name="paperLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <!-- 企业信息 -->
    <style name="infoNavBarText" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <!-- <item name="android:background">@drawable/info_nav_bar_selector</item> -->
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="infoActionBar">
        <item name="android:background">@drawable/action_bar</item>
        <item name="android:layout_height">94dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="infoActionTitleText" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">30dp</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>
    <style name="infoActionButtonAdd" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/info_button_add_selector</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="infoActionButtonDelete" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_delete_unable</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="infoActionButtonSave" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/info_button_save_selector</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="infoVerticalDivider">
        <item name="android:background">@drawable/line</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>
    </style>
    <style name="infoHorizontalDivider">
        <item name="android:background">@drawable/line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="infoModuleTitleText" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#6D737F</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="infoColumnName" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/info_column_name_shape</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>  
        <item name="android:paddingRight">10dp</item>  
    </style>
    <style name="infoColumnValue" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/info_column_value_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item> 
        <item name="android:paddingLeft">10dp</item>  
    </style>
    <style name="ImageDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">

         <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
       <item name="android:background">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>