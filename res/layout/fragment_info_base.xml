<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,3,5,7">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/company_name"/>
            <EditText 
                android:id="@+id/company_name"
                android:inputType="text"
                android:layout_span="3"/>
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/company_address"/>
            <EditText 
                android:id="@+id/company_address"
                android:inputType="text"
                android:layout_span="3"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
           <TextView 
               android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/info_code_organization"/>
            <EditText 
                android:id="@+id/info_code_organization"
                android:inputType="text"/>
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/info_num_file"/>
            <EditText 
                android:id="@+id/info_num_file"
                android:inputType="text"/>
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/company_area"/>
            <Spinner 
                android:id="@+id/company_area"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/type"/>
            <Spinner 
                android:id="@+id/type"/>
            
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/phone"/>
            <EditText 
                android:id="@+id/info_phone"
                android:inputType="phone"/>
            
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/fax"/>
            <EditText 
                android:id="@+id/info_fax"
                android:inputType="text"/>
            
            <TextView 
                android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
                android:text="@string/email"/>
            <EditText 
                android:id="@+id/info_email"
                android:inputType="textEmailAddress"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <LinearLayout 
	         android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:animateLayoutChanges="true">
	        <TextView
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:text="@string/responsor"/>
	        <Button 
	            android:id="@+id/button_info_add_responser"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:text="新增主要负责人"/>
	    </LinearLayout>
	    
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <LinearLayout 
	         android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
		    android:orientation="horizontal">
	        <TextView
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:text="@string/secure_manager"/>
	        <Button 
	            android:id="@+id/button_info_add_manager"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:text="新增安全管理员"/>
	    </LinearLayout>

	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	    android:orientation="vertical">

	    <TextView 
	        android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	        android:text="@string/info_attribute_special"/>
	
	    <TableLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	  		<TableRow >
	            <CheckBox 
	                android:id="@+id/info_shutdown"
	                android:text="@string/info_shutdown"/>
	             <CheckBox 
	                android:id="@+id/info_rectify"
	                android:text="@string/info_rectify"/>
	              <CheckBox 
	                android:id="@+id/info_expend"
	                android:text="@string/info_expend"/>
			</TableRow>
	    </TableLayout>
	</LinearLayout>


</LinearLayout>

</ScrollView>