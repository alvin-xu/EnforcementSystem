<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:gravity="center_vertical"
    android:minHeight="65dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/check_company_select"
            style="@style/enforceCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView style="@style/infoVerticalDivider" />

    <com.narkii.security.common.ScrollForeverTextView
        android:id="@+id/text_company_name"
        style="@style/enforceTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/company_name" />

    <TextView
        android:id="@+id/text_company_area"
        style="@style/enforceTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/company_area" />

    <com.narkii.security.common.ScrollForeverTextView
        android:id="@+id/text_company_address"
        style="@style/enforceTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/text_responsor"
        style="@style/enforceTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/responsor" />

    <TextView
        android:id="@+id/text_phone1"
        style="@style/enforceTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/phone" />

    <TextView
        android:id="@+id/text_valid_date"
        style="@style/enforceTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/valid_date" />

</LinearLayout>